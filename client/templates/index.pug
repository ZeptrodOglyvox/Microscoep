doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='css/index.css')
  script(src='https://kit.fontawesome.com/4d1a468bbd.js', crossorigin='anonymous')
  script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js')
  script(src='js/utils.js', defer='')
  script(src='js/index.js', defer='')
  if notification && (notification != "")
        script.
            $(function() {notify("#{notification}");})

  title Microscoep
nav.navbar
  h1.logo
    a(href='/') Microscoep
form#form(action='/room', method='POST', encType="multipart/form-data")
  h2 Microscoep
  .info-container
      label(for='username') Username
      input#username(type='text', name='username', maxlength='14')
  .bottom-container
    div
      h3 Create New Room
      input(type='submit', name='new', value='New Game')
    div 
      h3 Load Save File
      input#fileinput(type='file', name='saveFile', style='display:none;')
      span
        button(id="fakeinput" type="button") Browse... 
        span(id="filename") &nbsp;&nbsp;&nbsp;No file selected
      input(type='submit', name='load', value='Load')
    div
      h3 Join Room
      input#room(type='text', name='roomId', maxlength='6', placeholder='Room Code')
      input(type='submit', name='join', value='Join')
#notification
  p  This text can&apos;t be blank.
  i.fas.fa-microscope

