doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='css/index.css')
  script(src='https://kit.fontawesome.com/4d1a468bbd.js', crossorigin='anonymous')
  script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js')
  script(src='js/utils.js', defer='')
  script(src='js/index.js', defer='')
  if notification && (notification != "")
        script.
            $(function() {notify("#{notification}");})

  title Microscoep
nav.navbar
  h1.logo Microscoep
form#form(action='/room', method='POST')
  .top-container
    h2 Microscoep
    .info-container
      span
        label(for='username') Username
        input#username(type='text', name='username', maxlength='14')
      span
        p Icon
        span.fas.fa-eye.icon
  .bottom-container
    div
      h3 Create Room
      input(type='submit', name='new', value='New Game')
      p or
      input(type='submit', name='load', value='Load Save File')
    svg
      line(x1='50%', y1='0', x2='50%', y2='100%', stroke='black', stroke-width='2')
    div
      h3 Join Room
      label(for='room')
        | Room Code
        p
        input#room(type='text', name='roomId')
        input(type='submit', name='join', value='Join')
#notification
  p  This text can&apos;t be blank.
  i.fas.fa-microscope

